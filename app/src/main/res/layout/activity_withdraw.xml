<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.WithdrawActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/withdrawCashToolBar"
        android:layout_width="match_parent"
        android:background="@color/textColorDarkRed"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backPressIC"
            android:padding="8dp"
            android:contentDescription="close ic"
            android:src="@drawable/back_arrow_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Withdraw Amount"
            android:textSize="18sp"
           />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:background="@color/commanBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Withdraw Amount"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Enter amount to withdraw"
            android:textColor="@color/textColorYellow"
            android:textSize="14sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:hint="Amount"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:id="@+id/withdrawCashET"
            android:textColor="@color/black"
            android:background="@drawable/et_design"
            android:maxLength="6"
            android:textColorHint="@color/Gray"
            android:textSize="14dp"
            android:inputType="number"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/et_design"
                android:textColor="@color/textColorRed"
                android:textAlignment="center"
                android:text="UPI Payment"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/btnAddCash_upi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/cardGreenColor"
                android:background="@drawable/et_design"
                android:textColor="@color/white"
                android:text="Withdraw Cash"
                android:textAlignment="center"
                android:padding="@dimen/_10sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/withdrawBtn"/>


        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/withdrawMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="message"
            android:textColor="@color/textColorYellow"
            android:textSize="14sp"/>

    </LinearLayout>

 </LinearLayout>

