<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardview_look"
    android:backgroundTint="@color/bgColorDarkRed"
    android:layout_margin="@dimen/_2sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            app:cardBackgroundColor="@color/Gray"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp">

            <ImageView
                android:src="@drawable/person_ic"
                android:id="@+id/userImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:hint="Person name"
                android:textColor="@color/textColorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/followerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColorWhite"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/auditionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="username"
                android:textColor="@color/textColorWhite"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/followBtnText"
            android:background="@drawable/cardview_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:text="Follow"
            android:textColor="@color/bgColorDarkRed"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>