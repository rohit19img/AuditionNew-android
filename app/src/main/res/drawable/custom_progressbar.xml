<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item
        android:id="@android:id/background">
        <shape>
<!--            <stroke android:color="@color/perlightgray" android:width="1px"/>-->
            <gradient
                android:startColor="@color/transWhiteGrayColor"
                android:angle="225"
                android:endColor="@color/transWhiteGrayColor"
                />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/bgColorWhite"
                    android:angle="360"
                    android:endColor="@color/bgColorWhite"
                    />
                <corners android:radius="3dp"/>
            </shape>
        </clip>
    </item>
</layer-list>