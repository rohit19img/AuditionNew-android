<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_two_corner_round"
        >
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Video"
            android:textStyle="bold"
            android:textColor="@color/textColorWhite"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/t1"
            android:id="@+id/reportCycle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/commanlist_cycle_design"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/reportSubmitBtn"
            android:layout_width="match_parent"
            android:layout_below="@id/reportCycle"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/cardview_look"
            android:backgroundTint="@color/bgColorRed"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Report"
            android:textColor="@color/textColorWhite" />
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>