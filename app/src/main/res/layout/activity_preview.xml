<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.media3.ui.PlayerView
            android:id="@+id/videoExoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:resize_mode="fill"
            app:surface_type="surface_view"
            app:keep_content_on_player_reset="true"
            app:use_controller="false"
            app:show_buffering="never"
            />

        <ImageView
            android:id="@+id/backPressIC"
            style="@style/imageButtonStyle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:padding="5dp"
            android:paddingStart="0dp"
            android:src="@drawable/back_arrow_ic" />


        <TextView
            android:visibility="gone"
            android:id="@+id/saveTextInVideoBtn"
            style="@style/textViewStyle1"
            android:text="Save Text"
            android:background="@drawable/cardview_look"
            android:textColor="@color/textColorWhite"
            android:backgroundTint="@color/bgColorYellow"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            style="@style/textViewStyle"
            android:id="@+id/sendToUploadBtn"
            android:layout_width="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Next Step"
            android:textColor="@color/white"
            android:background="@drawable/cardview_look"
            android:backgroundTint="@color/commanBackground"
            />


        <LinearLayout
            android:id="@+id/sideLayout"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <ImageButton
                style="@style/imageButtonStyle"
                android:id="@+id/music"
                android:src="@drawable/add_music_ic"
                android:contentDescription="Add Music"/>

            <ImageButton
                android:id="@+id/addTextBtn"
                style="@style/imageButtonStyle"
                android:src="@drawable/add_text_ic"
                app:tint="@color/bgColorWhite"
                android:contentDescription="Add Text" />

            <TextView
                android:id="@+id/slowVideo"
                style="@style/imageButtonStyle"
                android:layout_height="35dp"
                android:text="Slow"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorWhite"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/normalVideo"
                style="@style/imageButtonStyle"
                android:layout_height="35dp"
                android:text="Normal"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorWhite"/>

            <TextView
                android:id="@+id/fastVideo"
                style="@style/imageButtonStyle"
                android:layout_height="35dp"
                android:text="Fast"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorWhite"/>

            <ImageButton
                android:visibility="gone"
                android:id="@+id/addFilterBtn"
                style="@style/imageButtonStyle"
                android:src="@drawable/ic_flash_on"
                app:tint="@color/bgColorWhite"
                android:contentDescription="Add Text" />

        </LinearLayout>

       <!-- <TextView
            android:id="@+id/movable_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:hint="Video Text"
            android:textColor="@color/textColorBlack"
            android:textSize="16sp" />-->

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/video_et_lyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:elevation="1dp">

            <EditText
                android:inputType="text"
                android:id="@+id/video_et_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="Add Text.."
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/color_picker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/color_ic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_et_text"
                android:layout_toStartOf="@id/saveTextOnSurface"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/textAlign"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_rate_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/record_button">



                    <RadioButton
                        android:id="@+id/topLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/record_rate_bg"
                        android:gravity="center"
                        android:text="Top Left"
                        android:textColor="@drawable/radio_button_text_color"
                        android:checked="true"
                        android:button="@null"
                        android:textSize="10sp"/>

                    <RadioButton
                        android:id="@+id/topRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/record_rate_bg"
                        android:gravity="center"
                        android:text="Top Right"
                        android:textColor="@drawable/radio_button_text_color"
                        android:button="@null"
                        android:textSize="10sp"/>

                    <RadioButton
                        android:id="@+id/centerText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/record_rate_bg"
                        android:gravity="center"
                        android:checked="true"
                        android:text="Center"
                        android:textColor="@drawable/radio_button_text_color"
                        android:button="@null"
                        android:textSize="10sp"/>

                    <RadioButton
                        android:id="@+id/bottomLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/record_rate_bg"
                        android:gravity="center"
                        android:text="Bottom Left"
                        android:textColor="@drawable/radio_button_text_color"
                        android:button="@null"
                        android:textSize="10sp"/>

                    <RadioButton
                        android:id="@+id/bottomRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/record_rate_bg"
                        android:gravity="center"
                        android:text="Bottom Right"
                        android:textColor="@drawable/radio_button_text_color"
                        android:button="@null"
                        android:textSize="10sp"/>


                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/saveTextOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/video_et_text"
                android:background="@color/bgColorYellow"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Done"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:visibility="visible"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>