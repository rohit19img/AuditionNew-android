<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".screens.fragment.PanValidationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/cardColorRed"
                android:id="@+id/cardVerified"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/panicon"
                            android:src="@drawable/ic_credit_card_green"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t1"

                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/white"
                            android:text="Verify your PAN Details"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/panVerified"
                        android:textColor="@color/textColorYellow"
                        android:textSize="14dp"
                        android:text="&#10004; Your PAN Card details are already verified."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardDetails"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/cardColorRed"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/white"
                            android:text="PAN Card"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"

                                android:text="Name"
                                android:textColor="@color/textColorYellow"
                                android:id="@+id/nameText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/panname"

                                android:text="Name"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/icon_color_black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"

                                android:text="PAN Number"
                                android:textColor="@color/textColorYellow"
                                android:id="@+id/numberText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/number"
                                android:text="number"

                                android:textColor="@color/white"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/icon_color_black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"

                                android:text="DOB"
                                android:textColor="@color/textColorYellow"
                                android:id="@+id/dobText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/pandob"

                                android:text="Name"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="136dp"
                            android:layout_height="136dp"
                            android:id="@+id/pancard"
                            android:layout_gravity="center"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="1dp"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/textColorRed"
                            android:textSize="14dp"
                            android:id="@+id/comment"

                            android:gravity="center"
                            android:text="Your PAN card is rejected"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"

                            android:layout_margin="2dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/textColorYellow"
                            android:id="@+id/imageText"
                            android:text="Click on image to view full size image."
                            android:gravity="right"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/cardColorRed"
                app:cardCornerRadius="6dp"
                android:visibility="gone"
                app:cardElevation="6dp"
                android:id="@+id/cardNotVerified"
                android:layout_margin="5dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/notVerified"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <!--<ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_credit_card_red"
                                android:layout_gravity="center_vertical"/>-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:id="@+id/t2"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:typeface="sans"
                                android:textColor="@color/white"
                                android:text="Verify your PAN Details"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/select_icon"
                            android:layout_marginTop="5dp"
                            android:id="@+id/img"
                            app:tint="@color/white" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:id="@+id/btnUpload"
                            android:text="Upload PAN CARD Image"
                            android:layout_marginTop="22dp"
                            android:background="@color/textColorDarkRed"/>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="1px"
                            android:id="@+id/uimage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/t3"
                            android:textColor="@color/textColorYellow"
                            android:textSize="10dp"
                            android:padding="2dp"
                            android:text="Image size up to 4mb*"/>


                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="8dp"
                            android:hint="Name*"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:background="@drawable/et_design"
                            android:padding="10dp"
                            android:inputType="textCapCharacters"
                            android:textColor="@color/black"
                            android:textColorHint="@color/textHintColor"
                            android:textSize="13sp" />




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/textColorYellow"
                            android:layout_marginTop="1dp"
                            android:id="@+id/t4"
                            android:layout_marginBottom="5dp"
                            android:textSize="10dp"
                            android:text="As on PAN Card"/>

                        <EditText
                            android:id="@+id/panNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/et_design"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/textHintColor"
                            android:maxLength="10"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                            android:inputType="textCapCharacters"
                            android:hint="PAN number*"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/textColorYellow"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/t5"
                            android:textSize="10dp"
                            android:text="Your 10 digit PAN card details"/>

                        <TextView

                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColorHint="@color/textHintColor"
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/et_design"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/dob"
                            android:layout_marginTop="13dp"
                            android:hint="Date of birth*"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:visibility="gone"
                            android:background="@color/transWhiteGrayColor"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/textColorYellow"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:id="@+id/t6"
                        android:text="* All fields are mandatory"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit for Verification"
                        android:id="@+id/btnSubmit"
                        android:padding="10dp"
                        android:background="@color/textColorDarkRed"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/cardColorRed"
                app:cardElevation="6dp"
                app:cardCornerRadius="4dp"
                android:id="@+id/invalidRequest"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <!--<ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_credit_card_red"
                            android:layout_gravity="center_vertical"/>-->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t7"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/white"
                            android:text="Verify your PAN Details"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:id="@+id/t8"
                        android:textSize="14dp"
                        android:text="To update your PAN card details please complete the steps mentioned below :"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:id="@id/t9"
                        android:padding="8dp"
                        android:lineSpacingExtra="10px"
                        android:text="\u2022 Verify your mobile number.\n\u2022 verify your Email Id\n\u2022 Complete your profile"
                        android:textColor="@color/textColorYellow"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>