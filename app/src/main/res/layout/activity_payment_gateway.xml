<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentGateway.PaymentGatewayActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_arrow_ic"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/topBarTitle"
            style="@style/TextViewStyle"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/backPress"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:text="Title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/topBarTitle"
            android:background="@color/gray" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/orderId"
                style="@style/TextViewStyle"
                android:text="Order ID:208" />

            <TextView
                android:id="@+id/amount"
                style="@style/TextViewStyle"
                android:text="â‚¹ 20,000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                android:padding="6dp"
                android:text="UPI App's"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/topBarTitle"
                android:layout_marginBottom="0.8dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="2dp"
                android:id="@+id/paymentAppCycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/payment_app_item"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>